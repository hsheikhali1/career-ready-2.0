---
const { image, title, description, href } = Astro.props;
---

<div class="flex flex-col h-full">
  <div class="bg-[#0C1827] p-8 flex flex-col items-center">
    <img class="h-[200px] w-[200px]" src={image} alt="card-image" />
  </div>
  <div class="pt-8 pb-6 px-2 flex flex-col space-y-4 bg-white h-full">
    <h2 class="text-[#0C1827] text-2xl font-medium font-big-shoulders-display">
      {title}
    </h2>
    <p class="text-[#0C1827] text-base font-satoshi">{description}</p>
    <div class="flex flex-row h-full">
      <a
        class="bg-[#0C1827] text-lg text-center text-white p-4 rounded-md w-full self-end"
        href={href}
        >Get Info
      </a>
    </div>
  </div>
</div>
